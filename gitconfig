[core]
  editor = vim

[color]
  status = auto
  diff = auto
  branch = auto

[alias]
  a = add
  l = "!source ~/.githelpers && pretty_git_log"
  au = add -u
  st = status
  ci = commit
  co = checkout
  cp = cherry-pick
  br = branch
  df = diff
  lg = log -p
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[difftool]
  tool = vimdiff

[mergetool]
  tool = vimdiff
[merge]
	tool = vimdiff
